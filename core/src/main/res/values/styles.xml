<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RobotoTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="RobotoButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/roboto_condensed_bold</item>
    </style>

    <!-- share -->
    <style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">@dimen/radius_normal</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="AppShapeAppearance.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">@dimen/radius_normal</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="AppShapeAppearance.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerSize">@dimen/radius_normal</item>
        <item name="cornerFamily">rounded</item>
    </style>
    <!-- end shape -->

    <!-- warning-bottom-sheet -->
    <style name="ShapeAppearanceBottomSheetDialog_Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/radius_normal</item>
        <item name="cornerSizeTopLeft">@dimen/radius_normal</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal" />
    <!-- end warning-bottom-sheet -->

    <style name="ClickableImageView" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@null</item>
    </style>

    <style name="RoundedCornerButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/size_xsmall</item>
    </style>

    <style name="RoundedCornerOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/size_xsmall</item>
    </style>

    <style name="CollapsingToolbar" parent="Widget.Design.CollapsingToolbar">
        <item name="expandedTitleTextAppearance">@style/TextAppearance.Core.CollapsingToolbar.Expanded</item>
        <item name="collapsedTitleTextAppearance">@style/TextAppearance.Core.CollapsingToolbar.Collapsed</item>
    </style>

    <style name="TextAppearance.Core.CollapsingToolbar.Expanded" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.Core.CollapsingToolbar.Collapsed" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
</resources>